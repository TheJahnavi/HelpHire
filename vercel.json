{
  "version": 2,
  "builds": [
    {
      "src": "server/vercel-entry.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**", 
          "server/gemini.ts", 
          "shared/**",
          "server/db.ts",
          "server/storage.ts",
          "server/vite.ts"
        ]
      }
    },
    {
      "src": "server/api-handler.ts",
      "use": "@vercel/node"
    },
    {
      "src": "server/test-function.ts",
      "use": "@vercel/node"
    },
    {
      "src": "server/api-test.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/server/test-function.ts"
    },
    {
      "src": "/api/db-test",
      "dest": "/server/api-test.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/api-handler.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/server/vercel-entry.ts"
    }
  ]
}