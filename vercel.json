{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist/public",
        "distDir": "dist/public"
      }
    },
    {
      "src": "dist/vercel-entry.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "dist/**"
      }
    },
    {
      "src": "server/vercel-handler.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "dist/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/server/vercel-handler.ts"
    },
    {
      "src": "/api/auth/login",
      "dest": "/server/vercel-handler.ts"
    },
    {
      "src": "/api/auth/signup",
      "dest": "/server/vercel-handler.ts"
    },
    {
      "src": "/api/auth/user",
      "dest": "/server/vercel-handler.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/vercel-handler.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/vercel-entry.js"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "speedInsights": {
    "enabled": true
  }
}