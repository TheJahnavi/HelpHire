{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist/public",
        "distDir": "dist/public"
      }
    },
    {
      "src": "server/vercel-handler.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "{shared/**,server/**,package.json}"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/vercel-handler.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ]
}